@{
}
@model MiniShop.Models.BillingViewModel
@{
    Layout = "_Layout";
}

<div class="billing-container">
    <h2>Billing Summary</h2>

    <div class="billing-details">
        <p><strong>Customer:</strong> @Model.UserName</p>
        <p><strong>Name:</strong> @Model.Details.FullName</p>
        <p><strong>Address:</strong> @Model.Details.Address</p>
        <p><strong>Phone:</strong> @Model.Details.Phone</p>
    </div>

    <table class="billing-table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Qty</th>
                <th>Unit Price</th>
                <th>Line Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model.Items)
            {
                <tr>
                    <td>@i.ProductName</td>
                    <td>@i.Quantity</td>
                    <td>₹@i.UnitPrice</td>
                    <td>₹@i.LineTotal</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="billing-summary">
        <p><strong>Subtotal:</strong> ₹@Model.Subtotal</p>
        <p><strong>Tax (18%):</strong> ₹@Model.Tax</p>
        <h3><strong>Grand Total:</strong> ₹@Model.Total</h3>
    </div>
</div>