@{
}
@model List<MiniShop.Models.CartItem>
@{
    Layout = "_Layout";
}
<h2 class="page-title">🛒 Your Cart</h2>

@if (!Model.Any())
{
    <p class="empty-cart">Your cart is empty.</p>
}
else
{
    <table class="cart-table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Qty</th>
                <th>Total</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var line in Model)
            {
                <tr>
                    <td>@line.ProductName</td>
                    <td>₹@line.UnitPrice</td>
                    <td>
                        <form asp-action="Update" method="post" class="inline-form">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@line.ProductId" />
                            <input type="number" name="qty" value="@line.Quantity" min="1" class="qty-box" />
                            <button type="submit" class="btn btn-update">Update</button>
                        </form>
                    </td>
                    <td>₹@line.LineTotal</td>
                    <td>
                        <form asp-action="Remove" method="post" class="inline-form">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@line.ProductId" />
                            <button type="submit" class="btn btn-delete">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="cart-actions">
        <form asp-action="Clear" method="post" class="inline-form">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-clear">Clear Cart</button>
        </form>

        <a asp-controller="Order" asp-action="Checkout" class="btn btn-checkout">Proceed to Checkout</a>
    </div>
}